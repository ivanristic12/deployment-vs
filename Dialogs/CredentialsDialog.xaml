<Window x:Class="IISDeployExtension.Dialogs.CredentialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Server Credentials" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter credentials for remote server:" FontWeight="Bold" Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="Username:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" x:Name="UsernameTextBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Grid.Row="3" Text="Password:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="4" x:Name="PasswordBox" Margin="0,0,0,15" Padding="5"/>

        <TextBlock Grid.Row="5" Text="Configuration:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" x:Name="ConfigurationTextBox" Margin="0,0,0,15" Padding="5"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Blue" FontWeight="Bold"/>
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
